        script(type="text/x-template", id="home")
            .container
                form
                    input.form-control(type="search", placeholder="Search", v-model="search")
                    select.form-control(v-model='genre')
                        option(value="") Select genre
                        option(v-for="value in genres", :value="value.id") {{value.name}}
                      //router-link(:to="")
                    i.icon.ion-md-heart(title="Add to favourites") {{favourites.length}}
                
                router-link.item(v-for="item in filteredItems", :key="item.id", :to="{ name: 'details', params: { id: item.id }}")
                    img(:src="item.image_url")
                    .rating
                        i.active
                    p.title {{item.title}}
